{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "everforest_green": "#a7c080",
    "everforest_aqua": "#83c092",
    "everforest_gray": "#859289",
    "everforest_red": "#e67e80",
    "everforest_orange": "#e69875",
    "everforest_yellow": "#dbbc7f",
    "everforest_blue": "#7fbbb3",
    "everforest_purple": "#d699b6"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:everforest_green",
          "properties": {
            "cache_duration": "none"
          },
          "template": " \u256d\u2500<#everforest_green>[<#everforest_aqua>\uf489</> </>{{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }}@{{ .HostName }}<#everforest_green>]</>"
        },
        {
          "type": "spotify",
          "style": "plain",
          "foreground": "p:everforest_green",
          "properties": {
            "cache_duration": "none",
            "playing_icon": "\uf1bc "
          },
          "template": "{{ .Icon }}{{ if ne .Status \"stopped\" }}{{ .Artist }} - {{ .Track }}{{ end }}"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:everforest_aqua",
          "properties": {
            "cache_duration": "none",
            "folder_icon": "\uf07b",
            "folder_separator_icon": " / ",
            "home_icon": "\uf015",
            "max_depth": 2,
            "style": "agnoster_short"
          }
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:everforest_green",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:everforest_red{{ end }}"
          ],
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": " {{ if gt .Code 0 }}âœ˜ {{ else }}\udb81\udc5e {{ end }}{{ if eq ( gt .Code 0 ) .Segments.Path.Writable}} {{ end }}"
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "#e69875", 
          "properties": {
            "display_mode": "environment",
            "fetch_virtual_env": true,
            "cache_duration": "none"
          },
          "template": " \uE235 {{ .Venv }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:everforest_green",
          "properties": {
            "branch_icon": "\ue725 ",
            "cache_duration": "none",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_worktree_count": true
          },
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf193 {{ .StashCount }}{{ end }}"
        },
        {
  "type": "time",
  "style": "plain",
  "foreground": "p:everforest_aqua",
  "properties": {
    "cache_duration": "none",
    "time_format": "Mon | 03:04 PM"
  },
  "template": " {{ .CurrentDate | date .Format }} "
}
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:everforest_aqua",
          "properties": {
            "cache_duration": "none"
          },
          "template": " <#83C092>\u2570\u2500</><#a7c080>\udb82\udf6f</><#a7c080>\udb82\udf6f</><#83c092>\udb82\udf6f</> \udb80\udd42 "
        }
      ]
    }
  ],
  "version": 3
}
